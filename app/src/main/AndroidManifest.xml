<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data android:name="@string/app_name"/>
        <!--
        IDE -> resolves to implementation
        APK -> resolves to implementation
        -->
        <meta-data
            android:name="implementation"
            android:value="@string/implementation"/>
        <!--
        IDE -> resolves to compileOnly - INCORRECT
        APK -> resolves to implementation
        -->
        <meta-data
            android:name="conflict"
            android:value="@string/conflict"/>
        <!--
        IDE -> resolves to compileOnly
        APK -> fails build, so commented out, but left for completeness
         -->
<!--        <meta-data-->
<!--            android:name="compile_only"-->
<!--            android:value="@string/compile_only"/>-->
        <!--
        IDE -> doesn't resolve
        APK -> builds and resolves to RuntimeOnly, CORRECT
        -->
        <meta-data
            android:name="runtime_only"
            android:value="@string/runtime_only"/>

    </application>

</manifest>